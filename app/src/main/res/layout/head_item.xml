<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
            android:id="@+id/head_item_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/head_item_max"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            tools:text="30℃"/>

    <TextView
            android:id="@+id/head_item_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            tools:text="32℃/21℃"/>

    <TextView
            android:id="@+id/head_item_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/head_item_max"
            android:textSize="20sp"
            tools:text="阴天 空气良"/>

    <TextView
            android:id="@+id/head_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingTop="40dp"
            android:layout_below="@id/head_item_weather"
            android:textSize="20sp"
            tools:text="北京市"/>
</RelativeLayout>